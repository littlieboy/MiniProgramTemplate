      <image class='image' src='{{item.imgsrc}}' mode='widthFix'></image>
      <view class='desc-info'>
        <view class='title'>{{item.title}}</view>
        <view class='info'>
          <text class='price'>ï¿¥{{item.commentCount}}</text>
          <image class='icon' src='/assets/images/5.jpg'/>
