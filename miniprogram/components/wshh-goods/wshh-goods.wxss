/* components/wshh-goods/wshh-goods.wxss */
.goods{
  display: flex;
  flex-wrap:wrap;
  justify-content: space-evenly;
  padding-top:40rpx; 
  text-align: center;
  border-bottom: 30rpx solid #f6f6f6;
}
.goods-item{
  width:48%;
  text-align:center;
  color:#333;
  padding-bottom:86rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.image {
  width:100%;
  border-radius: 10rpx;
}
.desc-info{
  position:absolute;
  left:0;
  right:0;
  bottom:5px;
}
.title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size:28rpx;
}
.info{
  font-size:26rpx;  
}
.info .price{
  color:#ff5777;
  padding-right: 10rpx;
}
.info .icon{
  width:30rpx;
  height:30rpx;
  padding:0 6rpx 0 10rpx;
  position:relative;
  top:6rpx;
}
.cfav{
  position:relative; 
}